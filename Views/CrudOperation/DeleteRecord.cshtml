@model CRUDmvc.Model.DeleteRecordResponse
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Record</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous">
</head>
<body style="background-color: black">
    @if (Model != null && Model.Message != null)
    {
        <p style="color: red;">@Model.Message</p>
        <button onclick="location.href='/Home/Index';" type="button" class="btn btn-outline-danger">Return to Home</button>
    }
    else
    {
        <form asp-action="UpdateRecord" asp-controller="CrudOperation" method="post">
            <div class="mb-3">
                <label for="YOURId" class="form-label" style="color: white">Your ID</label>
                <input type="text" class="form-control" id="YOURId" name="YOURId" required>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    }
</body>
</html>

