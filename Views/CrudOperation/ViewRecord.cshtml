@model CRUDmvc.Model.ViewMarksResponse
    <head>
        <header>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        </header>
        <style>
            html, body {
                display: flex;
                justify-content: center;
                align-items: center;
            }
            .btnDiv {
                display: flex;
                justify-content: center;
                align-items: center;           
            }
        </style>
    </head>
    <body style="background-color: black">

    @if (Model != null && Model.Message != null)
    {
        <div class="d-flex flex-column">
            @{
                float messageValue;
                if (float.TryParse(Model.Message, out messageValue) && messageValue > 2)
                {
                    <div>
                        <p style="color: green;">You have PASSED with @Model.Message GPA</p>
                    </div>
                }
                else
                {
                    <div >
                        <p style="color: red;">You have FAILED with @Model.Message GPA</p>
                    </div>

                }
            } 
            <div class="btnDiv">
                <button onclick="location.href='/Home/Index';" type="button" class="btn btn-outline-danger">Return to Home</button>
            </div>
        </div>
       
        
    }
    else
    {
        <div class="idForm">
            <form asp-action="ViewRecord" asp-controller="CrudOperation" method="post">
                <div class="mb-3">
                    <label for="Id" class="form-label" style="color: white">Enter your Id:</label>
                    <input type="text" class="form-control" id="Id" name="Id" required>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    }


    </body>



