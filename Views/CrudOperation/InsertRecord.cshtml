@model CRUDmvc.Model.InsertRecordResponse
<header>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</header>

<body style="background-color: black">



    @if (Model != null && Model.Message != null)
    {
        <p style="color: red;"> @Model.Message </p>
        <button onclick="location.href='/Home/Index';" type="button" class="btn btn-outline-danger">Return to Home</button>
    }
    else
    {
<form asp-action="RegisterStudent" asp-controller="CrudOperation" method="post">
    <div class="mb-3">
        <label for="FirstName" class="form-label" style="color: white">First Name</label>
        <input type="text" class="form-control" id="FirstName" name="FirstName" required>
    </div>
    <div class="mb-3">
        <label for="LastName" class="form-label" style="color: white">Last Name</label>
        <input type="text" class="form-control" id="LastName" name="LastName">
    </div>
    <div class="mb-3">
        <label for="Major" class="form-label" style="color: white">Major</label>
        <input type="text" class="form-control" id="Major" name="Major" required>
    </div>
    <div class="mb-3">
        <label for="age" class="form-label" style="color: white">Age</label>
        <input type="text" class="form-control" id="age" name="Age" required>
    </div>
    <div class="mb-3">
        <label for="educationLevel" class="form-label" style="color: white">Education Level</label>
        <input type="text" class="form-control" id="educationLevel" name="educationLevel" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
    }


</body>


